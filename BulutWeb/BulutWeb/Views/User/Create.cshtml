@model BulutWeb.Models.Model.Admin

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    <center> <h2>Admin Ekle</h2></center>
    <div class="blank-page-content">

        <!-- Error Page Info -->
        <div class="outer-w3-agile mt-3">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    <input type="text" class="form-control" placeholder="İsim" name="Name" required value="" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="email" class="form-control" placeholder="Email" name="Email" required value="" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="password" placeholder="Şifre" class="form-control" name="Password" required value="" />

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a href="/User/"> <input type="button" value="Vazgeç" class="btn btn-primary" /></a>

                </div>
            </div>
        </div>
    </div>

</div>
        }

       