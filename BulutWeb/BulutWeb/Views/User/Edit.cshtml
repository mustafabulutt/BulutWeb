@model BulutWeb.Models.Model.Admin

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<Center> <h4>Güncelle</h4></Center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="blank-page-content">

        <!-- Error Page Info -->
        <div class="outer-w3-agile mt-3">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div class="col-md-10">
                        <input class="form-control" placeholder="Adınız" required name="Name" value="@Model.Name" />

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input class="form-control" type="email" required placeholder="Email" name="Email" value="@Model.Email" />

                    </div>
                </div>



                <div class="form-group">

                    <div class="col-md-10">

                        <input class="form-control" type="password" required placeholder="Eski Şifre" name="OldPass" value="" />
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-10">
                        <input class="form-control" required placeholder="Yeni Şifre" name="Password" value="" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                        <a href="/User/">   <input type="button" value="Vazgeç" class="btn btn-primary" /></a>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Hata != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Hata");
            };
    </script>
}
