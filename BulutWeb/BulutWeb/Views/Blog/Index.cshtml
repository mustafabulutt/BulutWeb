@model IEnumerable<BulutWeb.Models.Model.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <center> <h2>Blog Post</h2></center>

<div class="blank-page-content">

    <!-- Error Page Info -->
    <div class="outer-w3-agile mt-3">
        <p>
            <a href="/Blog/Create/"> <input type="button" class="btn btn-primary" value="Post Ekle" /></a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.Raw(item.Content)
                    </td>
                    <td>
                        <img src="@item.Image" style="width:80px" />
                    </td>
                    <td>
                        <a href="/Blog/Edit/@item.BlogId"> <input type="button" class="btn btn-primary" value="Güncelle" /> </a>
                        <a href="/Blog/Delete/@item.BlogId"> <input type="button" class="btn btn-danger" value="Sil" /> </a>
                    </td>
                </tr>
            }

        </table>
        </div>
</div>