@model IEnumerable<BulutWeb.Models.Model.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <center> <h2>Hakkımızda</h2> </center>
<div class="blank-page-content">

    <!-- Error Page Info -->
    <div class="outer-w3-agile mt-3">

       
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageInformation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
               
                <th>
                    İşlemler
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.Image" class="img-responsive" style="width:80px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageInformation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    
                    <td>
                        <a href="/About/Edit/@item.Id"> <input type="button" class="btn btn-primary" value="Güncelle" /> </a>
                    </td>
                </tr>
            }

        </table>
        </div>
</div>