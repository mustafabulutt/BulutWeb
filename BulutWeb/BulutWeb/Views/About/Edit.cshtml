@model BulutWeb.Models.Model.About

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editör')
</script>


@using (Html.BeginForm("Edit", "About", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


<div class="form-horizontal">
    <center> <h4>Güncelleme Ekranı</h4></center>
  
    <div class="blank-page-content">

        <!-- Error Page Info -->
        <div class="outer-w3-agile mt-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img src="@Model.Image" class="img-responsive" style=" width:100px"  />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <input type="file" class="form-control" name="ResimUrl" accept=".jpg,.png,.jpeg" value="" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ImageInformation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="ImageInformation" required class="form-control" value="@Model.ImageInformation" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="Title" required class="form-control" value="@Model.Title" />

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea name="Description" class="ckeditor"  required>@Model.Description</textarea>

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="/About/">     <input type="button" value="Vazegeç" class="btn btn-danger" /></a>

                </div>
            </div>
        </div>
    </div>
        </div>
        }

        
