@model BulutWeb.Models.Model.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <center> <h2>Kategori Ekle</h2></center>

<div class="blank-page-content">

    <!-- Error Page Info -->
    <div class="outer-w3-agile mt-3">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="text" name="Name" class="form-control" required placeholder="Kategori İsmi" value="" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                        <a href="/Categorie/"> <input type="button" class="btn btn-danger" value="Vazgeç" /></a>
                    </div>
                </div>
            </div>
        }

        </div>
    </div>

       