

@{

    ViewBag.Title = "Home Page";
}




<section id="intro">
    <div class="jumbotron masthead">

        <div class="container">
            @{
                Html.RenderAction("SliderPartial", "Home");
            }
        </div>
    </div>


</section>



<!-- end tagline -->

<section id="maincontent">
    <div class="container">

        <div class="row">
            <div class="span3">
                <br /><br /> <br /><br />
                <h3 class="heading-success"><span class="btn btn-large btn-success"><i class="m-icon-big-swapright m-icon-white"></i></span>&nbsp;&nbsp;Hizmetlerimiz</h3>

            </div>

            @{
                Html.RenderAction("ServicesPartial", "Home");
            }


        </div>

    </div>
