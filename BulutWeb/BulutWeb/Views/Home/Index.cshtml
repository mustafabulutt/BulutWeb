        <!-- divider -->
        <div class="row">
            <div class="span12">
                <div class="divider"></div>
            </div>
        </div>
        <!-- end divider -->

        <div class="row">
            <div class="span12">
                <h3><a class="btn btn-large btn-success" href="#"><i class="m-icon-big-swapdown m-icon-white"></i></a>  Blog Yazıları</h3>

                <div id="latest-work" class="carousel btleft">
                    <div class="carousel-wrapper">

                        <ul class="portfolio-home da-thumbs">

                            @{
                                Html.RenderAction("BlogHomePartial", "Home");
                            }


                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
