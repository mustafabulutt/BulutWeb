@model ICollection<BulutWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="subintro">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <h3><i class="m-icon-big-swapright m-icon-white"></i> @ViewBag.KategoriAdi Kategorisi  </h3>
                </div>

            </div>
        </div>
    </div>
</section>

<section id="maincontent">
    <div class="container">
        <div class="row">

            <div class="span8">
                <!-- start article 1 -->

                @foreach (var item in Model)
                {
                    <article class="blog-post">

                        <div class="tooltip-demo headline">

                            <h4><a href="/Home/BlogDetail/@item.BlogId">@item.Title</a></h4>
                            <span class="comment"><a href="" rel="tooltip" data-placement="top" title="@item.comments.Count(); Yorum Bulunuyor">@item.comments.Count() yorum</a></span>
                        </div>

                        <div class="row">
                            <div class="span8">
                                <a href="#"><img class="img-responsive" style="width:900px; height:200px" src="@item.Image" alt="@item.Title" /></a>
                            </div>
                            <div class="span6">
                                <ul class="post-meta">

                                    <li class="last"><i class="icon-tags"></i> <span><a href="#">@item.category.Name </a></span></li>
                                </ul>
                                <div class="clearfix"></div>


                                @Html.Raw(item.Content)

                                <a href="/Home/BlogDetail/@item.BlogId">  <input type="button" class="btn btn-success" value="Gönderiyi Oku" />  </a>
                            </div>
                        </div>
                    </article>
                }



                <!-- end article 1 -->
                <!-- start article 2 -->
                <!-- end article 3 -->


            </div>

            <div class="span4">
                <aside>

                    <div class="widget">
                        <h4 class="heading-success"><span class="btn btn-large btn-success"><i class="m-icon-big-swapdown m-icon-white"></i></span>&nbsp;&nbsp;Kategoriler</h4>
                        @{
                            Html.RenderAction("BlogSCategoriePartial", "Home");
                        }
                    </div>
                    <div class="clearfix"></div>
                    <div class="widget">
                        <ul id="myTab" class="nav nav-tabs">
                            <li class="active"><a href="#recent" data-toggle="tab">Son Yazılar</a></li>


                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade in active" id="recent">
                                <ul class="recent">
                                    @{
                                        Html.RenderAction("LatestBlogPartial", "Home");
                                    }

                                </ul>
                            </div>


                        </div>
                    </div>
                </aside>
            </div>

        </div>
    </div>
</section>
