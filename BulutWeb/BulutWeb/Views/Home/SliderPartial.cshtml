@model IEnumerable<BulutWeb.Models.Model.Slider>
@{ 
    Layout = null;
}
<div class="row">
    <div class="span12">
        <div class="camera_wrap camera_black_skin" id="camera_wrap_2" >
            @foreach (var item in Model)
            {


                <div data-thumb="@item.Image" data-src="@item.Image" >
                    <div class="camera_caption fadeFromBottom"  >
                        
                        <div class="hidden-phone">
                            <h4>
                               @item.Description
                            </h4>
                        </div>
                    </div>
                </div>
            }


        </div>
        <!-- #camera_wrap_1 -->
    </div>
</div>