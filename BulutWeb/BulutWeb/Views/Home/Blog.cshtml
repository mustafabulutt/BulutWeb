
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="subintro">
    <div class="jumbotron subhead" id="overview">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <h3><i class="m-icon-big-swapright m-icon-white"></i> Blog</h3>
                </div>
              
            </div>
        </div>
    </div>
</section>

<section id="maincontent">
    <div class="container">
        <div class="row">

            <div class="span8">
                <!-- start article 1 -->
             
                @{ 
                    Html.RenderAction("BlogPartial", "Home");
                }


                <!-- end article 1 -->
                <!-- start article 2 -->
              
                <!-- end article 3 -->

             
            </div>

            <div class="span4">
                <aside>
                   
                    <div class="widget">
                        <h4 class="heading-success"><span class="btn btn-large btn-success"><i class="m-icon-big-swapdown m-icon-white"></i></span>&nbsp;&nbsp;Kategoriler</h4>
                       @{ 
                           Html.RenderAction("BlogSCategoriePartial", "Home");
                       }
                    </div>
                    <div class="clearfix"></div>
                    <div class="widget">
                        <ul id="myTab" class="nav nav-tabs">
                            <li class="active"><a href="#recent" data-toggle="tab">Son Yazılar</a></li>
                            
                           
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade in active" id="recent">
                                <ul class="recent">
                                 @{ 
                                     Html.RenderAction("LatestBlogPartial", "Home");
                                 }
                                
                                </ul>
                            </div>
                      
                           
                        </div>
                    </div>
                </aside>
            </div>

        </div>
    </div>
</section>